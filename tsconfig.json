{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES6",
        "strict": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
    },
    "include": [
        "./src/**/*",
    ]
}